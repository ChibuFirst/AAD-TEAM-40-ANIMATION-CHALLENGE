<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aad_bg_image"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/aad_team_3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="cursive"
        android:text="@string/aad_team_40_text2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/aad_team_2"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="8sp"
        android:fontFamily="cursive"
        android:text="@string/aad_team_40_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/aad_team_or"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_marginBottom="8dp"
        android:text="@string/aad_team_40_or"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_quiz"
        app:layout_constraintEnd_toStartOf="@id/btn_quiz"
        app:layout_constraintStart_toEndOf="@id/btn_lesson" />

    <Button
        android:id="@+id/btn_lesson"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/quiz_rounded_button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/learn_txt"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorAccent3"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_quiz"
        app:layout_constraintEnd_toStartOf="@+id/aad_team_or"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/aad_team_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="8sp"
        android:fontFamily="sans-serif-black"
        android:text="@string/aad_team_40_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/play_rounded_button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/quiz_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorAccent3"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/aad_team_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aad_team_or" />

</androidx.constraintlayout.widget.ConstraintLayout>